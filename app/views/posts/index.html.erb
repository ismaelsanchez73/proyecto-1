<div class="container mt-5">
  <h1 class="text-center mb-4">Mis Publicaciones</h1>
  <div class="row">
    <% @posts.each do |post| %>
      <div class="col-md-4 mb-4">
        <div class="card shadow-lg border-light"> <!-- Tarjeta con sombra más intensa -->
          <% if post.image.attached? %>
            <%= image_tag post.image, class: 'card-img-top img-fluid' %>
          <% else %>
            <img src="default-image-url.jpg" class="card-img-top img-fluid" alt="Imagen por defecto">
          <% end %>
          <div class="card-body">
            <h5 class="card-title text-truncate" title="<%= post.description %>"><%= post.description %></h5> <!-- Título truncado -->
            <div class="d-flex justify-content-between align-items-center mt-3">
              <div class="btn-group">
                <%= link_to "Mostrar", post_path(post), class: 'btn btn-sm btn-secondary' %> <!-- Enlace de mostrar -->
                <%= link_to "Editar", edit_post_path(post), class: 'btn btn-sm btn-primary' %>
                <%= link_to "Eliminar", post, method: :delete, data: { confirm: "¿Estás seguro?" }, class: 'btn btn-sm btn-danger' %>
              </div>
              <small class="text-muted">Fecha: <%= post.created_at.strftime("%d %b %Y") %></small>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
